#!/usr/bin/env /bin/php8.3
<?php

if (file_exists(__DIR__.'/../../../autoload.php')) {
    require __DIR__.'/../../../autoload.php';
} else {
    require __DIR__.'/../vendor/autoload.php';
}

$app = new Symfony\Component\Console\Application('Easily', '1.0.0');
$app->add(new Edu\Easily\Console\EasilyCreate);

$app->run();